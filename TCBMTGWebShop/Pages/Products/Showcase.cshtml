@page "{id:Guid}"
@model TCBMTGWebShop.Pages.Products.ShowcaseModel
@{
}

<form method="post">

<h1 class="mb-3">Showcase Product</h1>

<div class="mb-3">
    <label class="form-label">Product Name</label>
        <input type="text" class="form-control" asp-for="ShowcaseProductViewModel.ProductName" readonly />
</div>

<div class="mb-3">
    <label class="form-label">Product Description</label>
        <input type="text" class="form-control" asp-for="ShowcaseProductViewModel.ProductDescription" readonly />
</div>

<div class="mb-3">
    <label class="form-label">Product Type</label>
        <input type="text" class="form-control" asp-for="ShowcaseProductViewModel.ProductType" readonly />
</div>

<div class="mb-3">
    <label class="form-label">Product Price</label>
        <input type="text" class="form-control" asp-for="ShowcaseProductViewModel.ProductPrice" readonly />
</div>

    <div class="mb-3">
        <label class="form-label">Amount left in stock</label>
        <input type="number" class="form-control" asp-for="ShowcaseProductViewModel.ProductQuantity" readonly />
    </div>

    <div class="mb-3 d-flex justify-content-between">
        <a id="btnList" class="btn btn-dark" href="/">Back to Overview</a>
    </div>

</form>