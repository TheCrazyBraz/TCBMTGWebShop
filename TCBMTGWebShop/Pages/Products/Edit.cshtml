@page "{id:Guid}"
@model TCBMTGWebShop.Pages.Products.EditModel
@{
    var message = ViewData["Message"]?.ToString();
}

<form method="post">

<h1 class="mb-3">Edit Product</h1>

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }
    <div class="mb-3">
    <label class="form-label">Product ID</label>
    <input type="text" class="form-control" asp-for="EditProductViewModel.Id" readonly/>
</div>

<div class="mb-3">
    <label class="form-label">Product Name</label>
    <input type="text" class="form-control" asp-for="EditProductViewModel.ProductName" />
</div>

<div class="mb-3">
    <label class="form-label">Product Description</label>
    <input type="text" class="form-control" asp-for="EditProductViewModel.ProductDescription" />
</div>

<div class="mb-3">
    <label class="form-label">Product Type</label>
    <input type="text" class="form-control" asp-for="EditProductViewModel.ProductType" />
</div>

<div class="mb-3">
    <label class="form-label">Product Price</label>
        <input type="text" class="form-control" asp-for="EditProductViewModel.ProductPrice" />
</div>

    <div class="mb-3">
        <label class="form-label">Product Quantity</label>
    <input type="number" class="form-control" asp-for="EditProductViewModel.ProductQuantity" />
    </div>

    <div class="mb-3 d-flex justify-content-between">
        <button type="submit" class="btn btn-primary" asp-page-handler="Update">
            Update
        </button>
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Product?')" asp-page-handler="Delete">
            Delete
        </button>
    </div>

</form>